{
  "name": "wabbit",
  "version": "1.0.0",
  "author": "Mitch Smith <mitchpsmith1998@egmail.com>",
  "description": "A template for creating React and Tailwind CSS Projects",
  "keywords": ["tailwind", "react", "wabbit"],
  "repository": {
    "url": "https://github.com/mitchbne/wabbit",
    "type": "git"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "cssnano": "^4.1.10",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "build:css": "NODE_ENV=production postcss src/css/tailwind.src.css -o src/css/styles.css",
    "watch:css": "postcss src/css/tailwind.src.css -o src/css/styles.css -w",
    "start": "yarn run flowtyped && concurrently \"yarn watch:css\" \"yarn start:js\"",
    "build": "yarn run build:css && yarn run build:js",
    "flowtyped": "yarn flow-typed install",
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.1",
    "concurrently": "^5.0.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-only-var": "^0.1.2",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-underscore-to-lodash": "^0.0.1",
    "flow-bin": "^0.102.0",
    "flow-typed": "^2.6.2",
    "glob-all": "^3.1.0",
    "husky": "^3.0.0",
    "lint-staged": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "purgecss-webpack-plugin": "^1.6.0",
    "rxjs-compat": "^6.5.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "tailwindcss": "^1.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run flow && lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.jsx": [
        "eslint --fix",
        "git add"
      ],
      "src/css/**/*.{css,scss}": "stylelint"
    }
  }
}
