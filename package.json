{
  "name": "wabbit",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "build:css": "NODE_ENV=production postcss src/css/tailwind.css -o src/css/styles.css",
    "watch:css": "postcss src/css/tailwind.css -o src/css/styles.css -w",
    "start": "concurrently \"yarn watch:css\" \"yarn start:js\"",
    "build": "GENERATE_SOURCEMAP=false yarn run build:css && yarn run build:js",
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/jit": "^0.1.1",
    "@tailwindcss/typography": "^0.3.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "autoprefixer": "^10.0.2",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-underscore-to-lodash": "^0.0.2",
    "husky": "^4.2.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.0",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.0.5"
  }
}
