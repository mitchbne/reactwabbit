{
  "name": "wabbit",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "tailwind:css": "tailwind build src/css/tailwind.src.css -c  tailwind.config.js -o src/css/styles.css",
    "start": "yarn flow-typed install && yarn run tailwind:css && react-scripts start",
    "build": "yarn flow-typed install && yarn run tailwind:css && react-scripts build",
    "postbuild": "purgecss --css build/static/css/*.css --content build/static/index.html build/static/js/*.js --out build/static/css",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-only-var": "^0.1.2",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-underscore-to-lodash": "^0.0.1",
    "flow-bin": "^0.102.0",
    "flow-typed": "^2.6.2",
    "glob-all": "^3.1.0",
    "husky": "^3.0.0",
    "lint-staged": "^6.1.0",
    "purgecss-webpack-plugin": "^1.6.0",
    "rxjs-compat": "^6.5.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "tailwindcss": "^1.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run flow && lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.jsx": [
        "eslint --fix",
        "git add"
      ],
      "src/css/**/*.{css,scss}": "stylelint"
    }
  }
}
